{
  "name": "simple-chat-client",
  "version": "1.0.0",
  "description": "Client for Simple Chat server",
  "main": "dist/index",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "lint": "eslint \"**/*.{js,ts,tsx}\""
  },
  "dependencies": {
    "events": "^3.2.0",
    "lodash": "^4.17.20",
    "socket.io-client": "^3.1.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@types/events": "^3.0.0",
    "@types/lodash": "^4.14.168",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "commitlint": "^11.0.0",
    "eslint": "^7.20.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm build"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davx1992/simple-chat-client.git"
  },
  "keywords": [
    "node",
    "typescript",
    "chat",
    "js-chat",
    "messaging"
  ],
  "author": "davx1992 <davidsmurafa@gmail.com> (https://github.com/davx1992)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davx1992/simple-chat-client/issues"
  },
  "homepage": "https://github.com/davx1992/simple-chat-client#readme"
}
